---
import type { CollectionEntry } from 'astro:content';
import Pagination from '../../components/ui/Paginator.astro';
import JournalPreview from '../../components/journals/JournalPreview.astro';
import {
	getAllJournals,
	getUniqueTags,
	groupJournalsByMonth,
} from '../../utils/journal';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { collectionDateSort } from '../../utils/date';
import type { GetStaticPaths, Page } from 'astro';
import { Icon } from 'astro-icon/components';

export const getStaticPaths = (async ({ paginate }) => {
	const MAX_JOURNALS_PER_PAGE = 20;
	const MAX_TAGS = 5;
	const MAX_PINNED_JOURNALS = 7;
	const allJournals = await getAllJournals();
	const allJournalsByDate = allJournals.sort(collectionDateSort);
	const uniqueTags = getUniqueTags(allJournals).slice(0, MAX_TAGS);
	const pinnedJournals = allJournalsByDate
		.filter((p) => p.data.pinned)
		.slice(0, MAX_PINNED_JOURNALS);
	return paginate(allJournalsByDate, {
		pageSize: MAX_JOURNALS_PER_PAGE,
		props: { uniqueTags, pinnedJournals },
	});
}) satisfies GetStaticPaths;

interface Props {
	page: Page<CollectionEntry<'journal'>>;
	uniqueTags: string[];
	pinnedJournals: CollectionEntry<'journal'>[];
}

const { page, uniqueTags, pinnedJournals } = Astro.props;

const meta = {
	description:
		"I sit quietly by myself every morning and free write my subconscious thoughts into a private space and this is not that - rather it is the interpreted version of those thoughts, however appropriate or inappropriate they may be according to societal norms. I really don't care what people think about me so here it is - take it or leave it. Oh and you'll get a rundown of what trouble I was busy getting into for the day as well ðŸ˜‰.",
	title: 'Journal Entries',
};

const paginationProps = {
	...(page.url.prev && {
		prevUrl: {
			text: 'â† Previous Page',
			url: page.url.prev,
		},
	}),
	...(page.url.next && {
		nextUrl: {
			text: 'Next Page â†’',
			url: page.url.next,
		},
	}),
};

const groupedByMonth = groupJournalsByMonth(page.data);
const descMonthKeys = Object.keys(groupedByMonth).sort((a, b) => +b - +a);
---

<BaseLayout meta={meta}>
	<div class="mb-12 flex items-center gap-3">
		<h1 class="title">Journals</h1>
		<a href="/rss.xml" class="text-accent" target="_blank">
			<span class="sr-only">RSS Feed</span>
			<Icon
				aria-hidden="true"
				class="h-6 w-6"
				focusable="false"
				name="mdi:rss"
			/>
		</a>
	</div>
	<div class="grid sm:grid-cols-[3fr-1fr] sm:gap-x-8 sm:gap-y-16">
		<div>
			{
				pinnedJournals.length > 0 && (
					<section class="mb-16">
						<h2 class="title mb-6 text-xl">This Week's Journals</h2>
					</section>
				)
			}
		</div>
	</div>

	<div class="grid sm:grid-cols-[3fr-1fr] sm:gap-x-8 sm:gap-y-16">
		<div>
			{
				descMonthKeys.map((monthKey) => {
					const [year, month] = monthKey.split('-');
					const monthName = new Date(+year, +month - 1).toLocaleString(
						'default',
						{ month: 'long' }
					);
					return (
						<section class="mb-12">
							<h2 class="title mb-6 text-xl">
								{monthName} {year}
							</h2>
							<ul class="list" role="list">
								{groupedByMonth[monthKey].map((journal) => (
									<li class="mb-6">
										<JournalPreview journal={journal} />
									</li>
								))}
								|
							</ul>
						</section>
					);
				})
			}
			<Pagination {...paginationProps} />
		</div>
		{
			!!uniqueTags.length && (
				<aside>
					<h2 class="title mb-4 flex items-center gap-2 text-lg">
						Tags
						<svg
							aria-hidden="true"
							class="h-6 w-6"
							fill="none"
							stroke="currentColor"
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="1.5"
							viewBox="0 0 24 24"
							xmlns="http://www.w3.org/2000/svg"
						>
							<path d="M0 0h24v24H0z" fill="none" stroke="none" />
							<path d="M7.859 6h-2.834a2.025 2.025 0 0 0 -2.025 2.025v2.834c0 .537 .213 1.052 .593 1.432l6.116 6.116a2.025 2.025 0 0 0 2.864 0l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-6.117 -6.116a2.025 2.025 0 0 0 -1.431 -.593z" />
							<path d="M17.573 18.407l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-7.117 -7.116" />
							<path d="M6 9h-.01" />
						</svg>
					</h2>
					<ul class="flex flex-wrap gap-2">
						{uniqueTags.map((tag) => (
							<li>
								<a
									href={`/tags/${tag}`}
									class="weisgarden-link flex items-center justify-center"
								>
									<span aria-hidden="true">#</span>
									<span class="sr-only">View all posts with the tag</span>
								</a>
							</li>
						))}
					</ul>
					<span class="mt-4 block sm:text-end">
						<a href="/tags/" class="hover:text-link">
							View all <span aria-hidden="true">â†’</span>
						</a>
					</span>
				</aside>
			)
		}
	</div>
</BaseLayout>
